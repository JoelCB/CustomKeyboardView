<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboardRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:backgroundTint="#1D1D1D"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyLineHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/button_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/text"
            android:text="Mantén la tecla pulsada para usar acentos"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_atras"
            style="@style/KeyboardkeyStyleDarkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="atrás" />

        <Button
            android:id="@+id/button_q"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="q" />

        <Button
            android:id="@+id/button_w"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="w" />

        <Button
            android:id="@+id/button_e"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="e" />

        <Button
            android:id="@+id/button_r"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="r" />

        <Button
            android:id="@+id/button_t"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="t" />

        <Button
            android:id="@+id/button_y"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="y" />

        <Button
            android:id="@+id/button_u"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="u" />

        <Button
            android:id="@+id/button_i"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="i" />

        <Button
            android:id="@+id/button_o"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="o" />

        <Button
            android:id="@+id/button_p"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="p" />

        <ImageButton
            android:id="@+id/button_delete"
            style="@style/KeyboardkeyStyleDarkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_key_remove"
            android:tint="#A3A2A2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_mayus"
            style="@style/KeyboardkeyStyleNormalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginEnd="4dip"
            android:layout_marginRight="8dip"
            android:text="Mayus." />

        <Button
            android:id="@+id/button_a"
            style="@style/KeyboardkeyStyleNormalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a" />

        <Button
            android:id="@+id/button_s"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="s" />

        <Button
            android:id="@+id/button_d"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="d" />

        <Button
            android:id="@+id/button_f"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="f" />

        <Button
            android:id="@+id/button_g"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="g" />

        <Button
            android:id="@+id/button_h"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="h" />

        <Button
            android:id="@+id/button_j"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="j" />

        <Button
            android:id="@+id/button_k"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="k" />

        <Button
            android:id="@+id/button_l"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="l" />

        <Button
            android:id="@+id/button_l2"
            style="@style/KeyboardkeyStyleNormalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="l" />

        <Button
            android:id="@+id/button_mayus2"
            style="@style/KeyboardkeyStyleNormalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dip"
            android:layout_marginLeft="8dip"
            android:layout_marginEnd="4dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:text="Aceptar"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_z"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="z" />

        <Button
            android:id="@+id/button_x"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="x" />

        <Button
            android:id="@+id/button_c"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="c" />

        <Button
            android:id="@+id/button_v"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="v" />

        <Button
            android:id="@+id/button_b"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="b" />

        <Button
            android:id="@+id/button_n"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="n" />

        <Button
            android:id="@+id/button_m"
            style="@style/KeyboardkeyStyleNormalButton"
            android:text="m" />

        <Button
            android:id="@+id/button_ny"
            style="@style/KeyboardkeyStyleNormalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ñ" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyLine5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_hide"
            style="@style/KeyboardkeyStyleDarkButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_group"
            android:tint="#A3A2A2" />

        <Button
            android:id="@+id/button_espacio"
            style="@style/KeyboardkeyStyleDarkButton"
            android:layout_weight="1"
            android:text="Espacio" />

        <ImageButton
            android:id="@+id/button_hide"
            style="@style/KeyboardkeyStyleDarkButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:focusableInTouchMode="false"
            android:foregroundGravity="center|right"
            android:foregroundTintMode="add"
            android:hapticFeedbackEnabled="false"
            android:scaleType="center"
            android:src="@drawable/ic_group"
            android:tint="#A3A2A2" />

    </LinearLayout>

</LinearLayout>