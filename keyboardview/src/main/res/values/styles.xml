<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyStyle" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dip</item>
        <item name="android:layout_margin">4dip</item>
        <item name="android:fontFamily">@font/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="KeyboardkeyStyleNormalButton" parent="KeyStyle">
        <item name="android:background">@drawable/keyboard_key</item>
        <item name="android:backgroundTint">#666766</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:theme">@style/KeyboardkeyStyleNormalButton</item>
    </style>

    <style name="KeyboardkeyStyleDarkButton" parent="KeyStyle">
        <item name="android:background">@drawable/keyboard_key</item>
        <item name="android:backgroundTint">#404040</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A3A2A2</item>
        <item name="android:theme">@style/KeyboardkeyStyleNormalButton</item>
    </style>

    <style name="KeyboardkeyHelpButton" parent="KeyStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:textColor">#A3A2A2</item>
        <item name="android:theme">@style/KeyboardkeyStyleNormalButton</item>
    </style>
</resources>